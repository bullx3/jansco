<div class='ranking_top'>

<h1>総合ランキング</h1>


<table class='total_ranking'>
	<tr>
		<th rowspan='2'>順位</th>
		<th colspan='2'>総合得点<br>(チップあり)</th>
		<th colspan='2'>総対局数<br>(チップなし)</th>
		<th colspan='2'>平均スコア<br>(チップなし)</th>
		<th colspan='2'>最高スコア<br>(チップなし)</th>
	</tr>
	<tr>
		<th>名前</th><th>スコア</th>
		<th>名前</th><th>対局数</th>
		<th>名前</th><th>スコア</th>
		<th>名前</th><th>スコア</th>
	</tr>

	<% @ranking_count.times do |rank| %>
		<tr>
			<td><%= (rank+1) -%>位</td>
			<% if @rank_totalscores[rank] != nil %>
				<td><%= @rank_totalscores[rank].name %></td>
				<td><%= @rank_totalscores[rank].sum_total %></td>
			<% else %>
				<td></td><td></td>
			<% end %>
			<% if @rank_counts[rank] != nil %>
				<td><%= @rank_counts[rank].name %></td>
				<td><%= @rank_counts[rank].count_score %></td>
			<% else %>
				<td></td><td></td>
			<% end %>
			<% if @rank_avgs[rank] != nil %>
				<td><%= @rank_avgs[rank].name %></td>
				<td><%= @rank_avgs[rank].avg_score.truncate(2) %></td>
			<% else %>
				<td></td><td></td>
			<% end %>
			<% if @max_scores[rank] != nil %>
				<td><%= @max_scores[rank].name %></td>
				<% url = room_playing_path(params[:g_idname], @max_scores[rank].section_id) %>
				<td><%= link_to(@max_scores[rank].score, url) %></td>
			<% else %>
				<td></td><td></td>
			<% end %>
		</tr>
	<% end %>


</table>
<br>

<table class='total_ranking'>
	<tr>
		<th rowspan='2'>順位</th>
		<th colspan='2'>最高スコア<br>(集計内合計)</th>
		<th colspan='2'>チップ合計<br>(総チップ)</th>
		<th colspan='2'>最高チップ<br>(集計内合計)</th>
	</tr>
	<tr>
		<th>名前</th><th>スコア</th>
		<th>名前</th><th>スコア</th>
		<th>名前</th><th>スコア</th>
	</tr>
	<% @ranking_count.times do |rank| %>
		<tr>
			<td><%= (rank+1) -%>位</td>
			<% if @max_total_scores[rank] != nil %>
				<td><%= @max_total_scores[rank].name %></td>
				<% url = room_playing_path(params[:g_idname], @max_total_scores[rank].section_id) %>
				<td><%= link_to(@max_total_scores[rank].sum_score, url) %></td>
			<% else %>
				<td></td><td></td>
			<% end %>
			<% if @total_chips[rank] != nil %>
				<td><%= @total_chips[rank].name %></td>
				<td><%= @total_chips[rank].sum_chip %></td>
			<% else %>
				<td></td><td></td>
			<% end %>
			<% if @max_chips[rank] != nil %>
				<td><%= @max_chips[rank].name %></td>
				<% url = room_playing_path(params[:g_idname], @max_chips[rank].section_id) %>
				<td><%= link_to(@max_chips[rank].sum_chip, url) %></td>
			<% else %>
				<td></td><td></td>
			<% end %>
		</tr>
	<% end %>


</table>


<h2>
	<%= link_to 'ルームトップに戻る', room_path(params[:g_idname]) %>
</h2>

</div>